<?xml version="1.0" encoding="UTF-8"?>
<!-- 
     #{name} ${vo.name}
     ==================
        vo.getName()
 -->
<!-- getConnection / disConnection을 설정하는 부분 -->
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-config.dtd">
 <!-- 루트태그 => 아래로는 Content Model이 순서를 지켜서 들어와야함 -->
 <configuration>
   <!-- 1. properties -->
   <properties resource="db.properties"/>
   <!-- resource:파일명물어보는거(default폴더가java라서여긴따로경로명안줘도됨) -->
   <!-- 2. VO등록 -->
   <typeAliases>
      <typeAlias type="com.sist.dao.EmpVO" alias="EmpVO"/>
      <typeAlias type="com.sist.dao.DeptVO" alias="DeptVO"/>
      <!-- VO갯수만큼 typeAlias가 들어와야함 -->
   </typeAliases>
   <!-- 3.데이터베이스 정보 -->
   <environments default="development">
      <environment id="development">
         <!-- 3-1. commit/rollback 처리방법 결정부분 -->
         <transactionManager type="JDBC"/>
            <!-- JDBC:autocommit / MANAGE:상황에따라관리자처리 -->
         <!-- 3-2. 데이터베이스의 정보를 가지고 있음 -->
         <dataSource type="POOLED">
            <!-- [DI] 
                 PooledDataSource pool=new PooledDataSource()
                 pool.setDriver("oracle...")
                 => SqlSessionFactory
                    => getConnection/disConnection 생성
            -->
            <property name="driver" value="${driver}"/>
            <property name="url" value="${url}"/>
            <property name="username" value="${username}"/>
            <property name="password" value="${password}"/>
            <!-- 파일정보를 보지 못하도록 원격으로 데이터를 가져옴 : 시큐어코딩 -->
         </dataSource>
      </environment>
   </environments>
   <!-- 4. SQL문장의 위치 = include -->
   <mappers>
      <mapper resource="com/sist/dao/emp-mapper.xml"/>
      <!-- xml파일갯수만큼 추가해줘야함 -->
   </mappers>
 </configuration>